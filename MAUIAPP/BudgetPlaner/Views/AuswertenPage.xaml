<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetPlaner.Views.AuswertenPage"
             Title="AuswertenPage">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Label Text="Deine FinanzÃ¼bersicht" FontSize="24" TextColor="DeepSkyBlue" HorizontalOptions="Center" />

            <CollectionView ItemsSource="{Binding Budgets}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Border Stroke="DarkGray" BackgroundColor="LightGreen" Padding="15" Margin="5">
                                <Label Text="{Binding Amount}"/>
                            </Border>
                            <CollectionView ItemsSource="{Binding Budgets.Expenses}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Stroke="DarkGray" BackgroundColor="LightGreen" Padding="15" Margin="5">
                                            <Label Text="{Binding Category}"/>
                                            <Label Text="{Binding Amount}"/>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>
