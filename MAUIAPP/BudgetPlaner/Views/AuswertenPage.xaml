<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetPlaner.Views.AuswertenPage"
             Title="Auswerten">
    <ScrollView>
        <StackLayout Padding="20" Spacing="25">
            <Label Text="ðŸ’° Deine FinanzÃ¼bersicht" 
                   FontSize="26" 
                   FontAttributes="Bold"
                   TextColor="DeepSkyBlue" 
                   HorizontalOptions="Center" />

            <!-- Budgets -->
            <CollectionView ItemsSource="{Binding Budgets}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="12"
                               Padding="15"
                               Margin="0,0,0,200"
                               BorderColor="White"
                               BackgroundColor="LightBlue">
                            <StackLayout Spacing="15">
                                <!-- Budgetbetrag -->
                                <Label Text="{Binding Amount, StringFormat='Budget: {0:N2} â‚¬'}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="Black" />

                                <!-- AusgabenÃ¼berschrift -->
                                <Label Text="Ausgaben:"
                                       FontSize="16"
                                       TextColor="Black"
                                       FontAttributes="Bold" />

                                <!-- Expenses -->
                                <CollectionView ItemsSource="{Binding Expenses}">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Padding="10"
                                                  BackgroundColor="#2e2e2e"
                                                  Margin="0,0,0,40"
                                                  ColumnDefinitions="*,Auto"
                                                  RowSpacing="2">
                                                <Label Text="{Binding Category}"
                                                       FontSize="14"
                                                       TextColor="LightGreen"
                                                       VerticalOptions="Center" />
                                                <Label Text="{Binding Amount, StringFormat='{0:N2} â‚¬'}"
                                                       FontSize="14"
                                                       TextColor="#ff4747"
                                                       HorizontalOptions="End"
                                                       Grid.Column="1"
                                                       VerticalOptions="Center" />
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>
